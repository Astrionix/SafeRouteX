# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration (PostgreSQL + PostGIS)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/saferoutex
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saferoutex
DB_USER=postgres
DB_PASSWORD=your_password

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Mapbox (for server-side geocoding if needed)
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token

# CORS Settings
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# JWT Secret (backup if not using Firebase)
JWT_SECRET=your-super-secret-jwt-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SOS Configuration
SOS_TRACKING_INTERVAL_MS=5000
SOS_EXPIRY_HOURS=24
